
@model  IEnumerable<UTEQ.Models.FormularioUsuario>
@{
    ViewData["Title"] = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4"
    <div class="col-6">
        <h2 class="text-primary">USUARIOS REGISTRADOS</h2>
    </div>
     
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
               
                    
                    <th>
                        Nombre
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>
                       WhatsApp
                    </th>
                    <th>
                       ¿Es egresado?
                    </th>
                    <th>
                       Tipo de egresado
                    </th>
                    <th>
                        Carrera
                    </th>
                    <th>
                        ¿Es estudiante?
                    </th>
                    <th>
                        ¿Es docente?
                    </th>
                    <th>
                         ¿Es publico en general?
                    </th>

                         <th>
                               Curso a elegir
                        </th>
                
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.NombreU</th>
                        <th>@item.CorreoU</th>
                        <th >@item.whats</th>
                        <th >@item.egresado</th>
                        <th >@item.egresadoMod</th>
                        <th>@item.carrera</th>
                        <th >@item.estudiante</th>
                        <th >@item.docente</th>
                        <th >@item.publico</th>
                        <th>@item.sugerencia</th>



                        
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay registros deUSuarios</p>
    }

</div>


