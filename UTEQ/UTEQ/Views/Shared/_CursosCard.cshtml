@model UTEQ.Models.Cursos




<div class="col-lg-4 col-md-6 pb-4 filter @Model.Modalidad.nombreModalidad.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row justify-content-md-center">
            <h2 style="color:#527FD5"><label class="float-left">@Model.nombrecurso</label></h2>
        </div>

        <br />

        <div class="card-body p-1 px-3">
            <span class="col-7">Fecha de inicio: </span><label class="float-left">@Model.fecha</label> 
        </div>



        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@ED.ImagenRuta@Model.ImagenUrl" alt="Imagen Card">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100 text-dark" style="background-color:lavenderblush">@Model.Modalidad.nombreModalidad</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100 text-dark" style="background-color:aliceblue">@Model.lugar</span>
            </div>
           
            <div class="col-12 p-1">
                <a asp-action="Detalle" asp-route-Id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Ver Detalle</a>
            </div>
        </div>
    </div>
</div>
