@model IEnumerable<UTEQ.Models.Cursos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color:#527FD5">Lista de Cursos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cursos" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>  Nuevo curso
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    
                    <th>
                        Curso
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Horario
                    </th>
                    <th>
                        Modalidad
                    </th>
                    <th>
                        Lugar
                    </th>
                    <th>
                        Horas
                    </th>
                    <th>
                        Costo
                    </th>
                    <th>
                        Costo pref
                    </th>
                   
                    
                </tr>
            </thead>


            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                   
                        <th>@item.nombrecurso</th>
                        <th>@item.fecha</th>
                        <th>@item.horario</th>
                        <th>@item.Modalidad.nombreModalidad</th>
                        <th>@item.lugar</th>
                        <th>@item.totalhoras</th>
                        <th>@item.costo</th>
                        <th>@item.costopref</th>
                        
                        
                      


                        <th class="text-left">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Cursos" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    Editar  <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Cursos" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    Eliminar  <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>































    </table>
    }
    else
    {
            <p>No hay registros de Cursos</p>
    }

</div>
