@model UTEQ.Models.ViewModels.DetalleVM


<div class="">
    <form method="post">

        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #1922B1; ">
                <div class="card-header  text-light ml-0 row container" style="border-radius: 0px; background:#527FD5">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Cursos.nombrecurso</h1>
                    </div>
                    
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@ED.ImagenRuta@Model.Cursos.ImagenUrl" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border text-dark" style="background-color:lavenderblush">Modalidad:@Model.Cursos.Modalidad.nombreModalidad 
                                            --------Lugar: @Model.Cursos.lugar</span>
                                        <h3 class="text-success"></h3>

                                        <span class="col-7">Requisitos:</span> <label class="float-left">@Html.Raw(Model.Cursos.requisitos)</label>
                                        <br />
                                        <span class="col-7">Criterio de evaluación:</span> <label class="float-left">@Html.Raw(Model.Cursos.criterioeval)</label>
                                        <br />
                                        <span class="col-7">Costo:</span> <label class="float-left">@Html.Raw(Model.Cursos.costo)</label>
                                        <br />
                                        <span class="col-7">Costo preferencial:</span> <label class="float-left">@Html.Raw(Model.Cursos.costopref)</label>
                                        <br />
                                        <span class="col-7">Fecha:</span> <label class="float-left">@Html.Raw(Model.Cursos.fecha)</label>
                                        <br />
                                        <span class="col-7">Horario:</span> <label class="float-left">@Html.Raw(Model.Cursos.horario)</label>
                                        <br />
                                        <span class="col-7">Total de horas:</span> <label class="float-left">@Html.Raw(Model.Cursos.totalhoras)</label>
                                        <br />
                                        <span class="col-7">Temario:</span> <label class="float-left">@Html.Raw(Model.Cursos.urltemario)</label>
                                        <br />
                                        <br />
                                        <br />
                                        <p>Informes: Sandra Mariné Osorio, Coordinadora de Educación Continua al correo sandra.marine@uteq.edu.mx</p>
                                        <p>Teléfono: 442.2.09.61.00 Extensión 1136</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Regresar</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExisteEnCarro)
                            {
                                //<a asp-action="RemoverDeCarro" asp-route-Id="@Model.Cursos.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remover del Carro</a>
                            }
                            else
                            {
                                @if (!User.IsInRole(ED.ClienteRole) && !User.IsInRole(ED.AdminRole))

                                {
                                    <button type="submit" class="btn btn-info form-control btn-lg" style="height:50px; id="register" asp-area="Identity" asp-page="/Account/Login">Registrar</button>
                                }
                                @if (User.IsInRole(ED.ClienteRole))
                                {
                                    <a asp-controller="Formulario" asp-action="Crear" class="btn btn-info btn-square form-control btn-lg">
                                                        <i class="fas fa-plus"></i> Registrarme
                                                     </a>
                                }

                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
